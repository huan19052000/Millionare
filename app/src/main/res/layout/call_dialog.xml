<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/rl_calls"
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:padding="48dp"
        android:gravity="center"
        android:background="@drawable/player_layout_help_call_audience_background">
        <LinearLayout
            android:id="@+id/ln_answer"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_answer"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo tôi đáp án đúng là A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffbe1c"/>
            <Button
                android:id="@+id/btn_call_close"
                android:layout_width="102dp"
                android:layout_height="28dp"
                android:text="Đóng"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/dialog_confirm_background_button"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_call_01"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageButton
                android:background="@drawable/congvinh"
                android:id="@+id/btn_help_01"
                android:layout_width="72dp"
                android:layout_height="72dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công Vinh"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_call_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bill"
                android:id="@+id/btn_help_02"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill Gates"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_call_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_help_03"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/messi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messi"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_call_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_help_04"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bigronaldo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ronadol"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:text="Gọi điện thoại "
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/player_layout_help_call_title_background"
        android:layout_marginTop="-315dp"/>
</LinearLayout>